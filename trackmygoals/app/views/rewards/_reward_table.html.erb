<% if current_user.rewards.count > 0 %>
  <table class="table">
    <thead>
      <th> </th>
      <th class="text-center">XP target</th>
      <th class="text-center">Progress</th>
      <th class="text-right">Actions</th>
    </thead>
  </table>
    <div class="tbl-content">
      <table>
        <tbody>
          <% @user_rewards.each do |reward| %>
            <tr>
              <td class="left-col"><strong><%= link_to reward.name, reward_path(reward) %></strong></td>
              <td class="text-center"><%= reward.xp_goal %></td>
              <td class="text-center">
                <%#= progress_bar reward.xp_goal/5 %>
              </td>
              <td class="text-right right-col">
                <span class="fa-stack fa-2x">
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-default btn-xs" data-toggle="modal" data-target="#myUpdateReward_<%= reward.id %>">
                  <i class="fa fa-edit"></i>
                </button>
                <%= link_to reward_path(reward), method: :delete, data: 
                  {confirm: "Are you sure you want to delete this reward?\n
                  You will lose all data relating to this reward."}, 
                  class: "btn btn-xs btn-danger" do %>
                   <i class="fa fa-trash"></i>
                <% end %>
                </span>
              </td>
              <%= form_for(reward, :method => :put) do |f| %>
                <div class="modal fade" id="myUpdateReward_<%= reward.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Edit Reward</h4>
                      </div>
                      <div class="modal-body">
                        <div class="form-group">
                          <%= f.label :name %>
                          <%= f.text_field :name, class: 'form-control', placeholder: "Enter reward name..."  %>
                        </div>
                        <div class="form-group">
                          <%= f.label :xp_goal %>
                          <%= f.number_field :xp_goal, class:"form-control", placeholder: "Enter XP target..." %>
                        </div>
                        <div class="form-group">
                          <%= f.label "Select goals to contribute to reward" %>
                          <div class="scrollbox">
                            <label><input type="checkbox" onclick="toggle(this);" class="first-input"/><strong>Select all</strong></label><br />
                            <%= f.collection_check_boxes :goal_ids, @user_goals, :id, :name do |cb| %>
                              <% cb.label(class: "checkbox") {cb.check_box + cb.text} %>
                            <% end %>
                          </div>
                        </div>
                      </div>
                      <div class="modal-footer">
                        <div class="form-group">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                          <%= f.submit class:"btn btn-success btn-md" %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </table>
<% else %>
  <h4 class="text-center">You have no rewards yet!</h4>
  </br>
  <div class="text-center">
    <%= link_to "Create new reward", new_reward_path, class: "btn btn-primary btn-lg" %>
  </div>
<% end %>