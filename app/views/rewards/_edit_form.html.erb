<%= form_for @reward, remote: true, :html => { :id => "edit_reward_#{@reward.period}" } do |f| %>
  <%= f.hidden_field :period %>
  <div class="row reward-form-row">
    <div class="col-md-9 col-sm-9 col-xs-9">
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control form-control-sm', placeholder: "e.g. Â£10 treat.."  %>
      </div>
      <div class="form-group">
        <%= f.number_field :xp_goal, class:"form-control form-control-sm", placeholder: "e.g. 2,000.." %>
      </div>
    </div>
    <div class="col-md-3 col-sm-3 col-xs-3">
      <div class="text-right reward-form-buttons">
        <%= button_tag type: 'submit', class: "btn btn-success btn-xs reward-btn-form" do %>
          <i class="fa fa-check fa-2x" aria-hidden="true"></i>
        <% end %>
        <button class="btn btn-default btn-xs btn-form" id="cancel_reward_<%= @reward.period %>">
          <i class="fa fa-close fa-2x"></i>
        </button>
      </div>
    </div>
  </div>
<% end %>