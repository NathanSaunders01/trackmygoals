<table>
  <thead class="completed-table">
    <th> </th>
    <th class="text-center">Value</th>
    <th class="text-center">Date Completed</th>
    <th class="text-right">Actions</th>
  </thead>
</table>
<div class="tbl-content">
  <% if @completed_goals.count > 0 %>
    <table>
      <tbody>
        <% @completed_goals.each do |goal| %>
          <tr>
            <td class="left-col"><%= goal.name.titleize %></td>
            <td class="text-center"><%= goal.xp_value %> XP</td>
            <td class="text-center"><%= time_ago_in_words(goal.updated_at) %> ago </td>
            <td class="text-right right-col">
              <%= link_to complete_goal_path(goal), method: :patch, class:"btn btn-xs btn-primary" do %>
                 <i class="fa fa-undo"></i>
              <% end %>
              <%= link_to duplicate_goal_path(goal), method: :put, class:"btn btn-xs btn-success" do %>
                <i class="fa fa-copy"></i>
              <% end %>
              <%= link_to goal_path(goal), method: :delete, data: 
                {confirm: "Are you sure you want to delete this goal?\n
                You will lose all data relating to this goal."}, 
                class: "btn btn-xs btn-danger" do %>
                 <i class="fa fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h4 class="text-center">You have no completed tasks yet!</h4>
  <% end %>
</div>