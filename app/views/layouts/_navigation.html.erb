          </li>
        <% else %>
          <li><%= link_to "LOG IN", new_user_session_path %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right nav-links">
        <li><%= link_to 'ABOUT', about_path %></li>
        <li><%= link_to 'CONTACT US', new_contact_path %></li>
      </ul>
    </div><!-- /.navbar-collapse -->
