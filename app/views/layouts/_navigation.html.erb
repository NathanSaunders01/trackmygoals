<nav class="navbar navbar-default navbar-fixed-top <%= if user_signed_in? then "navbar-logged" end %>" role="navigation">
  <div class='container'>
    <div class="navbar-header">
      <%= link_to root_path, class:"navbar-brand" do %>
        <span>
          <%= image_tag "merit-without-background.png", class:"logo" %>
          <small>Beta</small>
        </span>
      <% end %>
    </div>
    <div class="collapse navbar-collapse" id="main-nav-collapse">
      <ul class="nav navbar-nav navbar-right nav-profile">
        <% if user_signed_in? %>
          <li id="profile">
            <%= link_to 'javascript:void(0)' do %>
              Hello, <%= current_user.first_name %>
              <i class="fa fa-user"></i>
            <% end %>
            <ul id="profile-links" class="profile-dropdown">
              <li class="text-center"><%= link_to "Settings", edit_user_registration_path(current_user) %></li>
